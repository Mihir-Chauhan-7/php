<?xml version="1.0"?>
<config>
    <modules>
        <Cybercom_Vendor>
             <version>1.0.0</version>
        </Cybercom_Vendor>
    </modules>
    <global>
        <helpers>
            <vendor>
                <class>Cybercom_Vendor_Helper</class>
            </vendor>
        </helpers>
        <blocks>
            <vendor>
                <class>Cybercom_Vendor_Block</class>
            </vendor>
        </blocks>
        <models>
            <vendor>
                <class>Cybercom_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>Cybercom_Vendor_Model_Resource</class>
                <entities>
                    <vendor>
                        <table>vendor</table>
                    </vendor>                    
                </entities>
            </vendor_resource>
        </models>
        <resources>
			 <vendor_setup>
				 <setup>
				    <module>Cybercom_Vendor</module>
				 </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
			 </vendor_setup>

            <vendor_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </vendor_write>

            <vendor_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </vendor_read>
		 </resources>
    </global>
    <admin>
        <routers>
            <vendor>
                <use>admin</use>
                <args>
                    <module>Cybercom_Vendor</module>
                    <frontName>admin_vendor</frontName>
                </args>
            </vendor>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </adminhtml>
</config>